{
  "name": "@launchdarkly/toolbar-core",
  "private": true,
  "description": "Monorepo for LaunchDarkly Toolbar and Demo App",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @launchdarkly/toolbar-core build",
    "demo": "pnpm --filter launchdarkly-toolbar-demo dev",
    "demo:mock": "pnpm --filter launchdarkly-toolbar-demo dev:mock",
    "demo:build": "pnpm --filter launchdarkly-toolbar-demo build",
    "demo:build:mock": "pnpm --filter launchdarkly-toolbar-demo build:mock",
    "dev": "pnpm --filter @launchdarkly/toolbar dev",
    "dev:link": "./scripts/setup-local-links.sh",
    "dev:server": "pnpm --filter mock-server start",
    "dev:status": "./scripts/dev-status.sh",
    "dev:unlink": "./scripts/remove-local-links.sh",
    "dev:watch": "./scripts/dev-watch.sh",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "lint": "pnpm -r lint",
    "storybook": "pnpm --filter @launchdarkly/toolbar storybook",
    "build:storybook": "pnpm --filter @launchdarkly/toolbar build:storybook",
    "test": "pnpm --filter @launchdarkly/toolbar test",
    "test:e2e:ci": "TEST_ENV=ci playwright test --config=./e2e/playwright.config.ts",
    "test:e2e:ci:ui": "TEST_ENV=ci playwright test --ui --config=./e2e/playwright.config.ts",
    "test:e2e:local": "TEST_ENV=local playwright test --config=./e2e/playwright.config.ts",
    "test:e2e:local:ui": "TEST_ENV=local playwright test --ui --config=./e2e/playwright.config.ts",
    "upgrade-launchpad": "pnpm up \"@launchpad-ui/*\" \"@internationalized/*\" react-aria \"@react-aria/*\" \"@react-types/*\" \"@react-stately/*\" react-stately react-aria-components react react-dom @types/react @types/react-dom --latest -r"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@storybook/addon-docs": "^9.0.5",
    "@storybook/addon-essentials": "^9.0.0-alpha.12",
    "@storybook/addon-interactions": "^9.0.0-alpha.10",
    "@storybook/addon-links": "^9.0.5",
    "@storybook/addon-onboarding": "^9.0.5",
    "@storybook/blocks": "^9.0.0-alpha.17",
    "@storybook/react": "^9.0.5",
    "@storybook/test": "^9.0.0-alpha.2",
    "@types/node": "^24.2.1",
    "http-server": "^14.1.1",
    "prettier": "^3.5.3",
    "storybook": "^9.0.5",
    "storybook-addon-rslib": "^2.0.0",
    "storybook-react-rsbuild": "^2.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}
