{
  "compilerOptions": {
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "types": ["vitest", "@testing-library/jest-dom"]
  },
  "include": ["src", ".storybook/svg.d.ts"],
  "exclude": ["dist", "node_modules", "stories"]
}
